package absolute.utils {	/**	 * @author Will Costa	 * @author http://www.willcosta.net	 */	public class ArrayUtil {		//----------------------------------		//  Public Functions		//----------------------------------				/**		 * Finds and removes one object from the array		 * @param array The array that will be searched;		 * @param object The object to be found		 */		static public function removeObject(array : Array, object : *) : void {			array.splice(array.indexOf(object), 1);		}						/**		 * Removes object at the given index		 * @param array The array that you want to remove from		 * @param index The index of the object to be removed		 */		static public function removeObjectAt(array : Array,index : int) : void {			array.splice(index, 1);		}				/*		 * Removes the objects within the given range		 * @param array The array that you want to remove from		 * @param from The index of the first object		 * @param to The index of the last object		 */		static public function removeObjects(array : Array,from : int, to : int) : void {			array.splice(from, to - from);		}  			  		//----------------------------------   		//  Private Functions  		//----------------------------------  			  		//----------------------------------   		//  Event Handlers  		//----------------------------------  			  		//----------------------------------   		//  Getters & Setters  		//----------------------------------	}}