package absolute.utils {	import flash.external.ExternalInterface;			/**	 * @author Will Costa	 * @author http://www.willcosta.net	 */	public class QueryString {		/**		 * Gets all variables in the query string		 * 		 * @example		 * 		 * trace(QueryString.getVariables().country) // output: Brazil		 */		public static function getVariables() : Object {			var url : String = ExternalInterface.call("document.location.search.toString");			if(!url) return null;			var variables : Object = {};			var pairs : Array = url.split("?")[1].split("&");			var pairName : String;			var pairValue : String;			for (var i : int = 0;i < pairs.length; i++) {				pairName = pairs[i].split("=")[0];				pairValue = pairs[i].split("=")[1];				variables[pairName] = pairValue;			}			return variables;			}	}}