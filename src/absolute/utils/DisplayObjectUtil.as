package absolute.utils {	import flash.display.DisplayObjectContainer;	/**	 * @author Will Costa	 * @author http://www.willcosta.net	 */	public class DisplayObjectUtil {				/*		 * Remove all childs from a DisplayObjectContainer		 */		public static function removeAllChildren(target : DisplayObjectContainer) : void {			while(target.numChildren > 0) {				target.removeChildAt(0);				}		}	}}