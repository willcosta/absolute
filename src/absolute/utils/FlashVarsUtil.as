package absolute.utils {	import flash.display.DisplayObject;	import flash.display.LoaderInfo;	/**	 * @author Will Costa	 * @author http://www.willcosta.net	 * 	 * A singleton instance to get the flashvars of the swf	 * @example	 * 	 * FlashVarsUtil.getInstance().init(stage);	 * var myProperty:String = FlashVarsUtil.getInstnace().getProperty("my_property_name");	 */	public class FlashVarsUtil {		private static var _instance : FlashVarsUtil;		private static var _target : DisplayObject;		private var _hash : Array;		public function FlashVarsUtil(singletonEnforcer : SingletonEnforcer) {		}		//----------------------------------		//  Public Functions		//----------------------------------		public static function getInstance() : FlashVarsUtil {			if(_instance == null) {				_instance = new FlashVarsUtil(new SingletonEnforcer());			}			return _instance;		}				public function init(target:DisplayObject):void {			_hash = [];			_target = target;			var parameters:Object = LoaderInfo(_target.root.loaderInfo).parameters			for (var p : String in LoaderInfo(_target.root.loaderInfo).parameters) {				_hash[p] = parameters[p];			}		}		public function getProperty(name : String) : * {			if(!_hash) return null;			return _hash[name];		}  		//----------------------------------   		//  Private Functions  		//----------------------------------  			  		//----------------------------------   		//  Event Handlers  		//----------------------------------  			  		//----------------------------------   		//  Getters & Setters  		//----------------------------------	}}internal class SingletonEnforcer {}